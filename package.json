{
  "name": "@kutsan/eslint-config",
  "version": "1.2.1",
  "description": "Eslint configuration for my projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kutsan/eslint-config.git"
  },
  "license": "MIT",
  "author": "Kutsan Kaplan <me@kutsan.dev> (https://kutsan.dev)",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "check": "pnpm run check:lint && pnpm run check:format && pnpm run check:format",
    "check:format": "prettier --ignore-path .gitignore --check .",
    "check:lint": "eslint --max-warnings=0 --flag unstable_native_nodejs_ts_config",
    "check:types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write --list-different .",
    "prepare": "husky"
  },
  "dependencies": {
    "@eslint/js": "^9.16.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-love": "^133.0.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@kutsan/prettier-config": "^1.0.1",
    "@kutsan/typescript-config": "^1.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "eslint": ">=9"
  }
}
